{
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A --node-modules-dir=auto npm:vite",
    "build": "deno run -A --node-modules-dir=auto npm:vite build",
    "server:start": "deno run -A --node-modules-dir --watch ./server/main.ts",
    "serve": "deno task build && deno task server:start"
  },
  "compilerOptions": {
    "types": ["react", "react-dom", "express", "cors", "immer"],
    "lib": ["dom", "dom.iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "imports": {
    "#settings": "./settings.ts",
    "#client/": "./src/client/src/",
    "#prisma/": "./src/prisma/",
    "#server/": "./src/server/",
    "#shared/": "./src/shared/",
    "@ant-design/icons": "npm:@ant-design/icons@^6.0.0",
    "@ant-design/v5-patch-for-react-19": "npm:@ant-design/v5-patch-for-react-19@^1.0.3",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@orpc/client": "npm:@orpc/client@^1.7.2",
    "@orpc/openapi": "npm:@orpc/openapi@^1.7.2",
    "@orpc/server": "npm:@orpc/server@^1.7.2",
    "@prisma/client": "npm:@prisma/client@^6.12.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.1",
    "@types/cors": "npm:@types/cors@^2.8.19",
    "@types/express": "npm:@types/express@^5.0.3",
    "@types/react": "npm:@types/react@^19.1.8",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.7.0",
    "antd": "npm:antd@^5.26.4",
    "arktype": "npm:arktype@^2.1.20",
    "conf": "npm:conf@^14.0.0",
    "cors": "npm:cors@^2.8.5",
    "es-toolkit": "npm:es-toolkit@^1.39.6",
    "express": "npm:express@^5.1.0",
    "http-status": "npm:http-status@^2.1.0",
    "immer": "npm:immer@^10.1.1",
    "install": "npm:install@^0.13.0",
    "jotai": "npm:jotai@^2.12.5",
    "jotai-immer": "npm:jotai-immer@^0.4.1",
    "npm": "npm:npm@^11.4.2",
    "prisma": "npm:prisma@^6.12.0",
    "react": "npm:react@^19.1.0",
    "react-dom": "npm:react-dom@^19.1.0",
    "react-router-dom": "npm:react-router-dom@^7.7.0",
    "vite": "npm:vite@^7.0.5"
  }
}
